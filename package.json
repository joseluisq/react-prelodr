{
  "name": "react-prelodr",
  "version": "1.1.0",
  "description": "A React component based on Prelodr",
  "keywords": [
    "react",
    "prelodr",
    "preloader",
    "react-component"
  ],
  "license": "MIT",
  "repository": "joseluisq/react-prelodr",
  "author": {
    "name": "JosÃ© Luis Quintana",
    "url": "http://git.io/joseluisq"
  },
  "main": "./react-prelodr.js",
  "dependencies": {
    "prelodr": "^2.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^20.0.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-2": "^6.22.0",
    "coveralls": "^2.11.15",
    "enzyme": "^2.7.1",
    "eslint": "^3.14.1",
    "eslint-plugin-react": "^7.0.0",
    "gzip-size": "^3.0.0",
    "in-publish": "^2.0.0",
    "jest-cli": "^20.0.0",
    "pretty-bytes": "^4.0.2",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "readline-sync": "^1.4.5",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.2.1"
  },
  "engines": {
    "node": ">= 4.0"
  },
  "scripts": {
    "start": "webpack-dev-server -d --content-base ./ --hot --inline src/app.js",
    "build:lib": "babel ./src -d . --ignore 'test.js' --ignore 'app.js'",
    "build:umd": "webpack --progress --colors src/react-prelodr.js dist/react-prelodr.js",
    "build:min": "webpack --progress --colors -p src/react-prelodr.js dist/react-prelodr.min.js",
    "build": "node ./scripts/build.js",
    "prepublish": "node ./scripts/build.js",
    "release": "node ./scripts/release.js",
    "lint": "eslint src",
    "test": "npm run lint && jest --coverage",
    "test-watch": "npm run lint && jest --watch",
    "coverage": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2",
      "react"
    ],
    "plugins": [
      "dev-expression"
    ]
  },
  "jest": {
    "verbose": true,
    "testPathIgnorePatterns": [
      "/(node_modules|scripts|dist)/"
    ]
  }
}
